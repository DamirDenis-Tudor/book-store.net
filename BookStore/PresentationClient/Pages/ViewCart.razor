@page "/viewcart"
@using Persistence.DTO.Product

<PageTitle>View Cart</PageTitle>

<NavMenu />

<div class="content">
	<main>
		<div class="title">
			<h2>Cosul meu</h2>
		</div>
		@foreach (var prod in Products)
		{
			<ProductCart Product="@prod"/>
		}

	</main>
	<aside>
		<div>
			<h2>Sumar comanda</h2>
			<p>Cost produse: 123.34 Lei</p>
			<p>Cost transport: 11.99 Lei</p>
		</div>
		<div>
			<h2>
				Total:<br />2332.99 Lei
			</h2>

			<a href="/bill"><button>Continua</button></a>
		</div>
	</aside>
</div>