@page "/login"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage

<div class="content">
    <h1 class="logo">PetShop</h1>
    <div class="login-area">
        <h2>Salut!</h2>
        <EditForm Model="User" OnValidSubmit="LoginSubmit">
            <DataAnnotationsValidator />
            <div class="validation">
                <p>@_logginError</p>
                <p class="success">@_logginSuccess</p>
                <ValidationSummary />
            </div>
            <div class="login-form">
                <InputText class="login-input email" @bind-Value="User.Username" placeholder="Username..."></InputText>
                <InputText class="login-input parola" @bind-Value="User.Password" type="password" placeholder="Parola..."></InputText>
            </div>
            <div class="login-action-area">
                <button type="submit" class="login-btn">Login</button>
                <span>Nu ai cont? Te poti autentifica <a href="/register">aici</a>!</span>
            </div>
        </EditForm>

    </div>
    <h1 class="logo" style="opacity: 0;">PetShop</h1>
</div>
