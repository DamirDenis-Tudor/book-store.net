<div class="navbar-bg">
    <div class="logo-search">
        <a href="/" class="logo">BookShop.net</a>
        <div class="search-section">
            <InputText class="search-bar" placeholder="Incepe o cautare..." @bind-Value="@Search"> </InputText>
        </div>
    </div>
    <div class="auth-area">
        @if (_loggedIn)
        {
            <a href="/"><button class="logout-btn" onclick="@Logout"> <img src="Images/logout_icon.png" alt="Logout" /></button></a>
            <a href="/add"><button class="add-product-btn"> <img src="Images/plus_icon.png" alt="Add Product" /> </button></a>
        }
        else{
            <a href="/" class="button button-login">Login</a>
        }
    </div>

</div>