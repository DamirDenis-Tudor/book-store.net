<Window x:Class="PetShop_ClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop_ClientGUI"
        Height="1080" Width="1920">
    <Grid Background="#EDF2FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#FAF6FE" CornerRadius="0 0 40 40"/>
        <DockPanel >
            <TextBlock Text="PetShop" Background="Transparent" FontWeight="ExtraBold" FontSize="50" Margin="38 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#1F0519"></TextBlock>
            <TextBox Style="{StaticResource ProductSearchBox}" Margin="56 0 0 0" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left"></TextBox>

            <Button  Width="162" Height="55" Background="#2BDE91" Content="Login" FontSize="25" FontWeight="Bold" Style="{StaticResource ButtonTheam}">
               
            </Button>
           
        </DockPanel>
        
        
    </Grid>
</Window>
